<div class="card">
  <div class="card-header <%= variant.present? ? "card-header-#{variant}" : '' %>">
    <h3 class="card-title"><%= title %></h3>
  </div>

  <div class="card-body">
    <%= content %>
  </div>

  <% if footer %>
    <div class="card-footer">
      <%= footer %>
    </div>
  <% end %>
</div>
